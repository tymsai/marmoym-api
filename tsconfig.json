{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./",
    "lib": [
      "es6",
      "es7"
    ],
    "module": "commonjs",  
    "moduleResolution": "node",
    "outDir": "./tsc_out/",
    "paths": {
      "@config/*": [ 
        "src/config/*" 
      ],
      "@constants/*": [
        "src/constants/*"
      ],
      "@daos/*": [
        "src/daos/*"
      ],
      "@database/*": [
        "src/database/*"
      ],
      "@entities/*": [
        "src/database/entities/*"
      ],
      "@middlewares/*": [
        "src/middlewares/*"
      ],
      "@models/*": [
        "src/models/*"
      ],
      "@modules/*": [
        "src/modules/*"
      ],
      "@routes/*": [
        "src/routes/*"
      ],
      "@services/*": [
        "src/services/*"
      ],
      "@src/*": [
        "src/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ]
    },
    "target": "es6"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}