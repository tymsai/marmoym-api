{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./",
    "lib": [
      "es6",
      "es7"
    ],
    "module": "commonjs",  
    "moduleResolution": "node",
    "outDir": "./ts_out/",
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@models/*": [
        "src/models/*"
      ],
      "@controllers/*": [
        "src/controllers/*"
      ]
    },
    "target": "es6"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}