{
  "compilerOptions": {
    "allowJs": true,
    "target": "es6",
    "module": "commonjs",  
    "moduleResolution": "node",
    "outDir": "./ts_out/",
    "baseUrl": "./",
    "paths": {
      "@src/*": [
        "src/*"
      ]
    },
    "lib": [
      "es6",
      "es7"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}