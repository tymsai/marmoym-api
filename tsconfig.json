{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./",
    "lib": [
      "es6",
      "es7"
    ],
    "module": "commonjs",  
    "moduleResolution": "node",
    "outDir": "./tsc_out/",
    "paths": {
      "@config/*": [
        "src/config/marmoym-config/*"
      ],
      "@constants/*": [
        "src/constants/*"
      ],
      "@customTypes/*": [
        "src/customTypes/*"
      ],
      "@daos/*": [
        "src/daos/*"
      ],
      "@models/*": [
        "src/models/*"
      ],
      "@controllers/*": [
        "src/controllers/*"
      ],
      "@src/*": [
        "src/*"
      ]
    },
    "target": "es6"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}